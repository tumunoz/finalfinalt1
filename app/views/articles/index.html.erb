<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Lead</th>
      <th>Body</th>
      <th>Comment Count</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.lead %></td>
        <td><%= truncate(article.body, length:1000) %></td>
        <td><%= article.comments.count %></td>
        <td><%= article.created_at %></td>
        <td><%= article.updated_at %></td>
        <td><%= link_to 'Show', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Admin', admin_getArticles_path %>
<%= link_to 'New Article', new_article_path %>
